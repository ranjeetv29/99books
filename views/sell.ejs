<% include userhead %>
<script>

    function getresponse(catid) {
        var xhttp = new XMLHttpRequest()
        xhttp.open("GET","/users/fetchSubcategoryAJAX?catid="+catid,true)
        xhttp.send()
        
        xhttp.onreadystatechange=function() {
            if(xhttp.readyState==4 && xhttp.status==200) {
                document.getElementById("response").innerHTML = xhttp.responseText
            }
        }
    }

</script>


<!-- Start Add categories  -->
<div class="contact-box-main">
    <div class="container">
        <div class="row">
            
            <div class="col-lg-8 col-sm-12">
                <div class="contact-form-right">
                    <h2>Add Books</h2>
                    <form method="POST" action="/users/sell" enctype="multipart/form-data">
                        <input type="hidden" name="uid" value="<%= username %>" required>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
<!--product name-->                 <input type="text" style="text-transform: capitalize;" placeholder="Enter Book Title" class="form-control" name="userbtitle" required>
                                </div>
                            </div>
                            <div class="col-md-6">    
                                <div class="form-group">
<!--select cat name-->              <select onchange="getresponse(this.value)" name="catid" class="form-control" required>
                                        <option>Select Category</option>  
                                        <% for(let row of catlist) { %>
                                            <option value="<%= row._id %>"><%= row.catnm %></option>
                                        <% } %>   
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">    
                                <div class="form-group">
<!--select sub cat name-->          <select id="response" name="subcatid" class="form-control" required>
                                        <option>Select Sub Category</option> 
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
<!-- product description -->        <textarea rows="3" style="text-transform: capitalize;" cols="auto" class="form-control" name="userbdiscription" placeholder="Enter book description" required></textarea>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
<!--price-->                        <input type="number" name="userbprice" class="form-control" placeholder="Enter product price" required>    
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
<!--image-->                         <input class="form-control" type="file" id="formFile" name="bookimg" accept="image/*" required>
                                </div>
                            </div>
                            <div class="submit-button text-center col-md-12">
                                <div class="form-group">
                                    <button class="btn hvr-hover" id="add-category" type="submit">Sell Book</button>
                                    <div id="login" class="h3 text-center hidden"></div>
                                    <div class="clearfix"></div>
                                </div>    
                            </div>
                            <div>
                                <strong><%= output %></strong>
                                <br>
                                <p>View your Books here.<a href="/users/viewselluser" style="color: red;">View Books</a></p>
                                
                            </div>
                        </div>
                    </form>
                    <div class="text-left create-account">

<% include adminhead %>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
<link rel="stylesheet" href="http://cdn.datatables.net/1.10.2/css/jquery.dataTables.min.css"></style>
<script type="text/javascript" src="http://cdn.datatables.net/1.10.2/js/jquery.dataTables.min.js"></script>
<script type="text/javascript" src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>


<div class="admin-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1>Admin panel</h1>
                <h1></h1>
            </div>
        </div>
    </div>
</div>
<div class="about-box-main">
    <div class="container">
        <center>
            <h1 style="font-size: 30px; text-transform: uppercase; letter-spacing: 2px; font-weight: 900;">Available State List</h1>
            <div class="table-responsive">
                <table class="table table-striped" id="myTable">
                    <thead>
                        <tr>
                            <th scope="col" style="text-align: center;">ID</th>
                            <th scope="col" style="text-align: center;">Status</th>
                            <th scope="col">State</th>
                            <th scope="col" style="text-align: center;">Action</th>
                            <th scope="col" style="text-align: center;">Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let row of statelist) { %>
                        <tr>
                            <!-- ID -->
                            <td style="text-align: center;"><%= row._id %></td>  
                            <!-- STATUS -->
                            <% if(row.status==0) {%>
                                <td style="text-align: center;">
                                    <i class="fas fa-times" style="color: #d33; font-size: 18px;"></i>
                                </td>
                            <% } else{ %>
                                <td style="text-align: center;">
                                    <i class="fas fa-check" style="color: #018508; font-size: 18px;"></i>
                                </td>
                            <% } %>
                            <!-- STATE NAME -->
                            <td><%= row.statenm %></td>
                            <!-- ACTION (available/not-available) -->
                            <% if(row.status==0) {%>
                                <td style="text-align: center;">
                                    <a href="/admin/managestatestatus?sid=<%= row._id %>&s=available" title="Click to Available" class="fas fa-check" style="color: #018508; font-size: 18px;"></a>
                                </td>
                            <% } else{ %>
                                <td style="text-align: center;">
                                    <a href="/admin/managestatestatus?sid=<%= row._id %>&s=not-available" title="Click to Not Available" class="fas fa-times" style="color: #d33; font-size: 18px;"></a>
                                </td>
                            <% } %>
                            <!-- DELETE -->
                            <td style="text-align: center;">
                                <a href="/admin/managestatestatus?sid=<%= row._id %>&s=delete" title="Delete User" class="fas fa-trash" style="color: #d33; font-size: 18px;"></a>
                            </td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </center>
    </div>
</div>
<script>
    $(document).ready(function(){
        $('#myTable').dataTable();
    });
</script>
<% include adminfooter %>
<% include adminhead %>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
<link rel="stylesheet" href="http://cdn.datatables.net/1.10.2/css/jquery.dataTables.min.css"></style>
<script type="text/javascript" src="http://cdn.datatables.net/1.10.2/js/jquery.dataTables.min.js"></script>
<script type="text/javascript" src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>


<div class="admin-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1>Admin panel</h1>
                <h1>View and Manage Category</h1>
            </div>
        </div>
    </div>
</div>
<div class="about-box-main">
    <div class="container">
        <center>
            <h1 style="font-size: 30px; text-transform: uppercase; letter-spacing: 2px; font-weight: 900;">Category List</h1>
            <div class="table-responsive">
                <table class="table table-striped" id="myTable">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Category Name</th>
                            <th scope="col">Category Image</th>
                            <th scope="col" style="text-align: center;">Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let row of catlist) { %>
                        <tr>
                            <!-- ID -->
                            <td><%= row._id %></td>   
                            <!-- cat NAME -->
                            <td><%= row.catnm %></td>
                            <!-- image -->
                            <td><%= row.catimgnm %></td>
                            <!-- DELETE -->
                            <td style="text-align: center;">
                                <a href="/admin/managecategorystatus?catid=<%= row._id %>&s=delete" title="Delete Category" class="fas fa-trash" style="color: #d33; font-size: 18px;"></a>
                            </td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </center>
    </div>
</div>
<script>
    $(document).ready(function(){
        $('#myTable').dataTable();
    });
</script>
<% include adminfooter %>